{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "strict": true,
        "noImplicitAny": false,
        "paths": {
            "@": ["./src"]
        },
        "outDir": "./dist"
    }
}
